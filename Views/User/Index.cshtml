@model List<MVCCrud1.Models.TableViewModels.UserTableViewModel>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="Nuevo usuario"/>
    </div>
    <br />
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Edad</th>
            </tr>
            @foreach (var oElemento in Model)
            {
        <tr>
            <td>@oElemento.Id</td>
            <td>@oElemento.Email</td>
            <td>@oElemento.Edad</td>
            <td>
                <input onclick="jsDelete(@oElemento.Id);" type="button" value="Eliminar" class="btn btn-danger" />
                <input onclick="document.location.href='@Url.Content("~/User/Edit/" + oElemento.Id)'" type="button" value="Editar" class="btn btn-danger" />
            </td>
        </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(id) {
        if (confirm("Estas seguro de eliminarlo?")) {
            url = "@Url.Content("~/User/Delete")" + "/" + id;

            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/User/")"
                } else {
                    alert("Ocurrio un error")
                }
            })
        }
    }
</script>

